<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Emre.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Emre.Sayfalar"
    xmlns:local="clr-namespace:Emre"
    Shell.FlyoutBehavior="Flyout"
    BackgroundColor="Grey"
    FlyoutBackgroundColor="Aqua"
    Title="Emre">

     <ShellContent
        Icon="house.png"
        Title="Giris"
        ContentTemplate="{DataTemplate pages:Anasayfa}"
        Route="Giris" />

        <ShellContent
            Icon="applogo.png"
            Title="Kurlar"
            ContentTemplate="{DataTemplate pages:Kurlar}"
            Route="Kurlar" />

       <ShellContent
            Icon="copy.png"
            Title="Haberler"
            ContentTemplate="{DataTemplate pages:Haberler}"
            Route="Haberler" />

     <ShellContent
        Icon="plus.png"
        Title="Hava Durumu"
        ContentTemplate="{DataTemplate pages:HavaDurumu}"
        Route="HavaDurumu" />

    <ShellContent
        Icon="complete_task.png"
        Title="Yapilacaklar "
        ContentTemplate="{DataTemplate pages:Yapilacaklar}"
        Route="Yapilacaklar" />

     <ShellContent
        Icon="profil.png"
        Title="Ayarlar"
        ContentTemplate="{DataTemplate pages:Settings}"
        Route="Ayarlar" />

</Shell>